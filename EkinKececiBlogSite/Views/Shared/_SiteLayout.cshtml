@using EkinKececiBlogSite.Resources

<!DOCTYPE html>
<html class="no-js" lang="tr">
<head>

    <!--- basic page needs
    ================================================== -->
    <meta charset="utf-8">
    <title>Ekin KEÇECİ | BLOG</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- mobile specific metas
     ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/SiteLayout/css/styles.css" rel="stylesheet" />
    <!-- CSS
    ================================================== -->
    <link href="~/Content/SiteLayout/css/styles.css" rel="stylesheet" />
    <link href="~/Content/SiteLayout/css/vendor.css" rel="stylesheet" />
    <link href="~/Content/SiteLayout/css/styles.css" rel="stylesheet" />
    <link href="~/Content/SiteLayout/css/vendor.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- script
    ================================================== -->
    <script src="js/modernizr.js"></script>

    <!-- favicons
    ================================================== -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/SiteLayout/images/logoekon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/SiteLayout/images/logoekon.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/SiteLayout/images/logoekon.png>
    <link rel="manifest" href="/Home/Index/">

</head>

<body id="top">


    <!-- preloader
    ================================================== -->
    <div id="preloader">
        <div id="loader"></div>
    </div>

    <header class="s-header">

        <div class="row s-header__content">

            <div class="s-header__logo" style="font-family:Verdana, Geneva, Tahoma, sans-serif">
                <a class="logo" href="/Home/Index/">
                    <img src="~/Content/SiteLayout/images/logoekon.png" alt="Homepage" style="width:10.6rem ; height:8.8rem" />


                </a>@*Ekin KEÇECİ*@


            </div>
            <a href="/Home/ChangeLanguage?lang=tr" title="" style="color:black; font-weight:bold">TR | </a><br />
            <a href="/Home/ChangeLanguage?lang=en" title="" style="color:black; font-weight:bold">| EN </a>
            <nav class="s-header__nav-wrap" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">

                <h2 class="s-header__nav-heading h6">Site Navigation</h2>

                <ul class="s-header__nav">
                    <li class=""><a href="/Home/Index/" title="">@Lang.Anasayfa</a></li>

                    <li class="has-children">
                        <a href="#0" title="">@Lang.Kategoriler</a>


                        @{
                            Html.RenderAction("KategoriNavbarPartial", "Home");
                        }


                    </li>


                    @*<li><a href="/Home/BlogKategori/" title="">Blog</a></li>*@
                    <li><a href="/Home/Iletisim/" title="">@Lang.İletişim</a></li>





                </ul>
                <a href="#0" title="Close Menu" class="s-header__overlay-close close-mobile-menu">Close</a>

            </nav> <!-- end header__nav-wrap -->

            <a class="s-header__toggle-menu" href="#0" title="Menu"><span>Menu</span></a>

            <div class="s-header__search">

                <form role="search" method="get" class="s-header__search-form" action="#">
                    <label>
                        <span class="hide-content">Search for:</span>
                        <input type="search" class="s-header__search-field" placeholder="Type Your Keywords" value="" name="s" title="Search for:" autocomplete="off">
                    </label>
                    <input type="submit" class="s-header__search-submit" value="Search">
                </form>

                <a href="#0" title="Close Search" class="s-header__overlay-close">Close</a>

            </div> <!-- end search wrap -->



        </div> <!-- end s-header__content -->

    </header> <!-- end header -->
  



    @RenderBody();


    <footer class="s-footer">

        <div class="s-footer__main" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">

            <div class="row">

                <div class="column large-4 medium-6 tab-12 s-footer__info">

                    <img src="~/Content/SiteLayout/images/logo2yazili.png" />


                </div> <!-- end s-footer__info -->

                <div class="column large-2 medium-3 tab-6 s-footer__site-links">

                    <h5>@Lang.Site_Linkleri</h5>

                    <ul>
                        <li><a href="/Home/Index/">@Lang.Anasayfa</a></li>
                        <li><a href="#0">@Lang.Hakkımda</a></li>
                        <li><a href="#0">Blog</a></li>
                        <li><a href="#0">@Lang.İletişim</a></li>
                    </ul>

                </div> <!-- end s-footer__site-links -->

                <div class="column large-2 medium-3 tab-6 s-footer__site-links">

                    <h5>@Lang.Sosyal_Medya</h5>

                    <ul>
                        <li><a href="https://twitter.com/ekonteknoloji">Twitter</a></li>
                        <li><a href="https://www.facebook.com/Ekontek/">Facebook</a></li>
                        <li><a href="https://tr.linkedin.com/in/ekin-ke%C3%A7eci-727b72113">Linkedin</a></li>    
                        <li><a href="https://www.instagram.com/ekonteknoloji/">Instagram</a></li>
                    </ul>

                </div> <!-- end s-footer__site-links -->


                <div class="column large-4 medium-12 s-footer__subscribe">

                    <h5>@Lang.Takip_Edin</h5>

                    <p>@Lang.Blogları_yakından_takip_edin</p>

                    <div class="subscribe-form">

                        <form id="mc-form" class="group" novalidate="true">

                            <input type="email" value="" name="dEmail" class="email" id="mc-email" placeholder="Type &amp; press enter" required="">

                            <input type="submit" name="subscribe">

                            <label for="mc-email" class="subscribe-message"></label>

                        </form>

                    </div>

                </div> <!-- end s-footer__subscribe -->

            </div> <!-- end row -->

        </div> <!-- end s-footer__main -->

        <div class="s-footer__bottom">
            <div class="row">
                <div class="column">
                    <div class="ss-copyright">
                        <span>© Copyright Ekin KEÇECİ 2021</span>
                        <span>Design by <a href="https://www.styleshout.com/">Ekin KEÇECİ</a></span>
                    </div> <!-- end ss-copyright -->
                </div>
            </div>

            <div class="ss-go-top">
                <a class="smoothscroll" title="Back to Top" href="#top">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M6 4h12v2H6zm5 10v6h2v-6h5l-6-6-6 6z" /></svg>
                </a>
            </div> <!-- end ss-go-top -->
        </div> <!-- end s-footer__bottom -->

    </footer> <!-- end s-footer -->
    <!-- Java Script
    ================================================== -->
    <script src="~/Content/SiteLayout/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/SiteLayout/js/plugins.js"></script>
    <script src="~/Content/SiteLayout/js/main.js"></script>


</body>

</html>
